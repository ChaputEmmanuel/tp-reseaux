cat << EOF > /etc/bgpd-as1r2.conf
hostname bgpd
password zebra
log stdout
route-map from-as3 permit 10
 set local-preference 300
router bgp 1
 bgp router-id 192.168.0.2
 neighbor 10.0.1.1 remote-as 1
 neighbor 10.0.3.2 remote-as 3
 neighbor 10.0.3.2 route-map from-as3 in
 network 172.21.0.0/16
EOF
bgpd -d -z /dev/null -f /etc/bgpd-as1r2.conf -i /tmp/bgpd-as1r2.pid
