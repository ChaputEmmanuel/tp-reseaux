cat << EOF > /etc/bgpd-as4r1.conf
hostname bgpd
password zebra
log stdout
route-map from-as3 permit 10
 set local-preference 300
route-map from-as2 permit 10
 set local-preference 200
router bgp 4
 bgp router-id 192.168.0.5
 neighbor 10.0.4.1 remote-as 2
 neighbor 10.0.4.1 route-map from-as2 in
 neighbor 10.0.5.1 remote-as 3
 neighbor 10.0.5.1 route-map from-as3 in
 network 172.24.0.0/16
EOF
bgpd -d -z /dev/null -f /etc/bgpd-as4r1.conf -i /tmp/bgpd-as4r1.pid
